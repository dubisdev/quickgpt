{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "QuickGPT",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "startDragging": true,
        "setSize": true,
        "hide": true,
        "show": true,
        "setFocus": true
      },
      "fs": {
        "createDir": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "scope": [
          "$APPCONFIG",
          "$APPCONFIG/*"
        ]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "dev.dubis.quickgpt",
      "targets": [
        "msi",
        "updater"
      ],
      "copyright": "David Jiménez Ⓒ 2023"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "resizable": false,
        "title": "QuickGPT",
        "width": 600,
        "height": 40,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
